{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Sigil Specification Schema Configuration",
  "entryPoint": "schema/fragments/core.schema.json",
  "fragments": {
    "primitives": {
      "path": "schema/fragments/primitives.schema.json",
      "description": "Basic types, enums, and shared primitives",
      "dependencies": []
    },
    "fields": {
      "path": "schema/fragments/fields.schema.json",
      "description": "Field metadata and value mapping types",
      "dependencies": ["primitives"]
    },
    "filtering": {
      "path": "schema/fragments/filtering.schema.json",
      "description": "Filtering conditions and operators",
      "dependencies": ["primitives"]
    },
    "affordances": {
      "path": "schema/fragments/affordances.schema.json",
      "description": "Data affordance types (sorting, filtering, pagination, etc.)",
      "dependencies": ["primitives", "filtering"]
    },
    "text-format": {
      "path": "schema/fragments/text-format.schema.json",
      "description": "Text formatting types (number, date, currency, etc.)",
      "dependencies": []
    },
    "layout": {
      "path": "schema/fragments/layout.schema.json",
      "description": "Layout system (stack, grid)",
      "dependencies": ["primitives"]
    },
    "components": {
      "path": "schema/fragments/components.schema.json",
      "description": "Component configuration types",
      "dependencies": ["affordances", "text-format", "primitives"]
    },
    "core": {
      "path": "schema/fragments/core.schema.json",
      "description": "Root specification schema",
      "dependencies": ["components", "layout", "fields", "primitives"]
    }
  },
  "discriminatedUnions": [
    {
      "name": "DataTableAffordance",
      "location": "affordances.schema.json",
